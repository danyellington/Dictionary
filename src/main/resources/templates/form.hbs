{{#partial "content"}}
    <h1>Add a new Post!</h1>

    <form action="/words/new" method="post">

        <label for="entry">Word Entry</label>
        <input id="entry" name="entry" type="text">

        <label for="type">Select Word Type</label>
        <select name="type" class="form-control" id="type">
            <option value="noun">noun</option>
            <option value="pronoun">pronoun</option>
            <option value="verb">verb</option>
            <option value="adjective">adjective</option>
            <option value="adverb">adverb</option>
            <option value="conjunction">conjunction</option>
            <option value="preposition">preposition</option>
            <option value="interjection">interjection</option>
        </select>


        <label for="definition">Definition</label>
        <input id="definition" name="definition" type="text">

        <label for="synonym">Synonyms</label>
        <input id="synonym" name="synonym" type="text">


        <button type="submit" class="btn btn-default">Go!</button>
    </form>
    {{/partial}}

    {{> layout.hbs}}