{{#partial "content"}}

{{#if editWord}}
<h1>Edit this word!</h1>
<form action="/words/{{editWord.id}}/update" method="post">
    <label for="definition">Edit this post's content</label>
    <input id="definition" name="definition" type="text" value="{{editWord.definition}}">
    <button type="submit" class="btn btn-default">Go!</button>
    {{/if}}
</form>

{{/partial}}

{{> layout.hbs}}