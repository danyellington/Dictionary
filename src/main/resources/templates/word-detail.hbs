{{#partial "content"}}

{{#if word}}
<h5>Word:</h5>
<p>{{ word.entry }}</p>
<h5>Type:</h5>
<p> {{ word.type }}</p>
<h5>Definition:</h5>
<p> {{ word.definition }}</p>
<h5>Synonyms:</h5>
<p> {{ word.synonym }}</p>
{{#if word.published }}
<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
{{/if}}
<a href="/words/{{word.id}}/update">Edit this post</a><br>
{{else}}
<p>Nothing to Show</p>
{{/if}}


{{/partial}}

{{> layout.hbs}}